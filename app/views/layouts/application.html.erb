<!DOCTYPE html>
<html>
  <head>
    <title>Clipboard</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,600" rel="stylesheet" type="text/css">
    <script src="https://use.fontawesome.com/d453dbaaed.js"></script>
    <script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.min.js"></script>
  </head>

  <body>
  	<%= render 'layouts/header' %>

      <span id="content">

        <span id="layout_search">
          <span><i id="chosen" class="fa fa-th-large" aria-hidden="true" aria-label="box layout"></i></span>
          <span><i class="fa fa-bars" aria-hidden="true" aria-label="bars layout"></i></span>
          <span><input type="text" name="search"></span>
        </span>

        <span id="content_body">
        <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>"><%= message %></div>
        <% end %>

        <%= yield %>
        </span>

      </span>

      <span id="second_nav_bar">
      <span><button id="selected">Architecture</button></span>
      <span><button>Design</button></span>
      <span><button>Products</button></span>
      <span><button>Minimal</button></span>
      <span><button>Autos</button></span>
      <span><button>Technology</button></span>
      <span><button>Photography</button></span>
    </span>


  </body>
</html>
